@model ForumApp.Models.Category
@{
    @if (User.IsInRole("Admin"))
    {
        ViewData["Title"] = "Nova kategorija/potkategorija";
    }
    else
    {
        ViewData["Title"] = "Nova potkategorija";

    }
}

@if (User.IsInRole("Admin"))
{

    <h2 class="text-center mb-4">Dodaj novu kategoriju/pokategoriju</h2>
}
else
{
    <h2 class="text-center mb-4">Dodaj novu potkategoriju</h2>

}



<form asp-action="Create" method="post">
    <div class="form-group">
        @if (User.IsInRole("Admin"))
        {

            <label asp-for="Name" class="form-label">Naziv kategorije/potkategorije:</label>
        }
        else
        {
            <label asp-for="Name" class="form-label">Naziv potkategorije:</label>
        }
        <input type="text" asp-for="Name" class="form-control" placeholder="Unesite naziv" />
    </div>

    <div class="form-group">
        <label>Roditeljska kategorija</label>
        <select asp-for="ParentCategoryId" asp-items="ViewBag.ParentCategories">
            @if (User.IsInRole("Admin"))
            {
                <option value="">Bez roditelja</option>
            }
        </select>
    </div>

    <div class="d-flex justify-content-center" mt-1>
        <button type="submit" class="btn btn-success">Kreiraj</button>
    </div>

</form>

