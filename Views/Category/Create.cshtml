@model ForumApp.Models.Category
@{
    ViewData["Title"] = "Nova kategorija";
}

<h2 class="text-center mb-4">Dodaj novu kategoriju</h2>


<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label>Roditeljska Kategorija</label>
        <select asp-for="ParentCategoryId" asp-items="ViewBag.ParentCategories" class="form-control">
            <option value="">Bez roditelja</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Sačuvaj</button>
</form>


