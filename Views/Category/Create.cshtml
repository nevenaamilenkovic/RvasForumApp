@model ForumApp.Models.Category
@{
    ViewData["Title"] = "Nova kategorija";
}

<h2 class="text-center mb-4">Dodaj novu kategoriju</h2>


<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="form-label">Naziv kategorije:</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Unesite naziv kategorije" />
    </div>

    <div class="d-flex justify-content-center" mt-1>
        <button type="submit" class="btn btn-success">Kreiraj</button>
    </div>

</form>

