@model ForumApp.Models.ViewModels.ThemeCreateViewModel
@{
    ViewData["Title"] = "Kreiraj novu temu";
}

<h2>Objavi temu</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Title">Naslov</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Content" class="form-label">Sadrzaj</label>
        <textarea asp-for="Content" style="resize:none;" class="form-control"></textarea>
    </div>


    <div class="mb-3">
        <label asp-for="CategoryId">Kategorija:</label>

        <select asp-for="CategoryId" class="form-control" asp-items="Model.Categories">
            <option value="">- Izaberi kategoriju -</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Objavi temu</button>

</form>