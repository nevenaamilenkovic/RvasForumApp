
@{
    ViewData["Title"] = "Admin / Moderator Menu";
}

<h2 class="mb-4">Admin / Moderator Meni</h2>
<div class="row row-cols-1 row-cols-md-2 g-4">
    <div class="col">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Korisnici foruma</h5>
                <p class="card-text">Pregled, promocija i upravljanje korisnicima.</p>
                <a asp-controller="User" asp-action="Index" class="btn btn-primary">Idi</a>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Kategorije</h5>
                <p class="card-text">Uređivanje kategorija foruma.</p>
                <a asp-controller="Category" asp-action="Index" class="btn btn-primary">Idi</a>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Prijave</h5>
                <p class="card-text">Dashboard prijava neprikladnog sadržaja.</p>
                <a asp-controller="Report" asp-action="Dashboard" class="btn btn-primary">Idi</a>
            </div>
        </div>
    </div>
</div>
